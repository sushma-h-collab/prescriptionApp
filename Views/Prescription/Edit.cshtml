@model Prescription

@{
    string title = (ViewBag.Action as string ?? "Edit") + " Prescription";
    ViewData["Title"] = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Medication Name -->
    <div class="mb-3">
        <label asp-for="MedicationName" class="form-label"></label>
        <input asp-for="MedicationName" class="form-control" />
        <span asp-validation-for="MedicationName" class="text-danger"></span>
    </div>

    <!-- Fill Status -->
    <div class="mb-3">
        <label asp-for="FillStatus" class="form-label"></label>
        <select asp-for="FillStatus" class="form-select" asp-items="ViewBag.FillStatuses"></select>
        <span asp-validation-for="FillStatus" class="text-danger"></span>
    </div>

    <!-- Cost -->
    <div class="mb-3">
        <label asp-for="Cost" class="form-label"></label>
        <input asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <!-- Request Time -->
    <div class="mb-3">
        <label asp-for="RequestTime" class="form-label"></label>

        @if ((ViewBag.Action as string) == "Add")
        {
            <input asp-for="RequestTime" class="form-control" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" />
        }
        else
        {
            <input asp-for="RequestTime" class="form-control" readonly />
        }

        <span asp-validation-for="RequestTime" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="PrescriptionId" />

    <!-- Buttons -->
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>